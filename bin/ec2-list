$: << File.expand_path("../../lib", __FILE__)

require 'rubygems'
require 'getoptlong'
require 'ec2_tools'

USAGE = "Usage: ec2 list [ -s STATE ] [ PATTERN ]\nWhere STATE is one of pending, running, stopped, not_terminated, any"

opts = GetoptLong.new(
    [ "--help",	"-h", GetoptLong::NO_ARGUMENT ],
    [ "--state",	"-s", GetoptLong::REQUIRED_ARGUMENT ]
)

state_codes = EC2Tools::EC2::STATE_CODES[:any]

begin
  opts.each do |opt, arg|
    case opt
      when "--help"
        puts USAGE
        exit
      when "--state"
        state_codes = EC2Tools::EC2::STATE_CODES[arg.downcase.to_sym]
        if !state_codes
          puts "Unknown state: #{arg}"
          exit 1
        end
    end
  end
rescue GetoptLong::Error => e
  puts USAGE
  exit 1
end

if ARGV.count == 0
  instances = EC2Tools::EC2::list_instances(state_codes, /.*/)
else
  instances = EC2Tools::EC2::list_instances(state_codes, /#{ARGV[0]}/)
end

instances.each do |instance|
  puts "#{instance.id}\t#{instance.tags.Name}\t#{instance.dns_name}\t#{instance.status}"
end
