$: << File.expand_path("../../lib", __FILE__)

require 'rubygems'
require 'getoptlong'
require 'aws'
require 'ec2'

USAGE = "Usage: ec2 list [ -s STATE ] [ PATTERN ]\nWhere STATE is one of pending, running, stopped, not_terminated, any"
STATE_CODES = {
  :pending => [0],
  :running => [16],
  :stopped => [80],
  :not_terminated => [0, 16, 32, 64, 80],
  :any => [0, 16, 32, 48, 64, 80]
}

opts = GetoptLong.new(
    [ "--help",	"-h", GetoptLong::NO_ARGUMENT ],
    [ "--state",	"-s", GetoptLong::REQUIRED_ARGUMENT ]
)

state_codes = STATE_CODES[:any]

begin
  opts.each do |opt, arg|
    case opt
      when "--help"
        puts USAGE
        exit
      when "--state"
        state_codes = STATE_CODES[arg.downcase.to_sym]
        if !state_codes
          puts "Unknown state: #{arg}"
          exit 1
        end
    end
  end
rescue GetoptLong::Error => e
  puts USAGE
  exit 1
end

if ARGV.count == 0
  pattern = /.*/
else
  pattern = /#{ARGV[0]}/
end

state_codes = state_codes.map { |code| code.to_s }
ec2.instances.filter('instance-state-code', state_codes).each do |instance|
  if instance.tags.Name =~ pattern
    puts "#{instance.id}\t#{instance.tags.Name}\t#{instance.status}"
  end
end
