DESCRIBE_FILE=/tmp/ec2_describe.out
RESULT_FILE=/tmp/ec2_result.out
CODE_RUNNING=16

usage() {
  echo "Usage: $0 [ -s STATE ] [ PATTERN ]"
}

while getopts "hs:" opt; do
    case $opt in
      h)
        usage
        exit 0
        ;;
      s)
        state=$OPTARG
        shift 2
        ;;
      \?)
        usage
        exit 1
        ;;
    esac
done

if [ $# == 0 ]; then 
  PATTERN=".*"
else
  PATTERN=$1
fi

DESCRIBE_CMD=ec2-describe-instances
if [ -n "$state" ]; then
   DESCRIBE_CMD="$DESCRIBE_CMD --filter instance-state-code=$state"
fi

$DESCRIBE_CMD > $DESCRIBE_FILE
awk '/^TAG.*Name\t'"$PATTERN"'$/ { print $3, $5 }' $DESCRIBE_FILE > $RESULT_FILE

cat $RESULT_FILE
if [ $(wc -l $RESULT_FILE | awk '{ print $1 }') != 0 ]; then
  exit 0
else
  exit 2
fi
